    <widget id="live.exciteus.www" version="1.0.6" versionCode="13" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
        <name>ExciteUs</name>
        <description>
            Nightlife platform for young people in Leuven, Belgium
        </description>
        <author email="excite-us@outlook.be" href="https://exciteus.live">
        </author>
        <access origin="*" />
        <plugin name="cordova-plugin-whitelist" version="1" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <icon src="www/img/icon.png" />
        <platform name="android">
            <allow-intent href="market:*" />
        </platform>


